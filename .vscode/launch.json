{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${workspaceRoot}/.venv/bin/python",
            "program": "${workspaceRoot}/app/main.py",  // Replace main.py with your FastAPI entry file
            "args": [
                "runserver"
            ],
            // "preLaunchTask": "start-redis-container",
            // "postDebugTask": "stop-redis-container"
            "preLaunchTask": "docker-compose up",
            "postDebugTask": "docker-compose down"
        },
        {
            "name": "Celery",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--app",
                "api.worker.app",
                "worker",
                "--loglevel",
                "DEBUG",
                "--pool",
                "solo"
            ]
        }
    ],
    "compounds": [
        {
            "name": "FastAPI and Celery",
            "configurations": ["FastAPI", "Celery"]
        }
    ]
}
